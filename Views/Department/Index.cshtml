@model IEnumerable<AdoDotNetMvc.ViewModel.DepartmentViewModel>

@{
    ViewData["Title"] = "Departments";
}

<h1>@ViewData["Title"]</h1>


<p>
    <a asp-action="Create" class="btn btn-primary">Create New Department</a>
</p>
@if (Model.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dept in Model)
            {
                <tr>
                    <td>@dept.Name</td>
                    <td>
                        <a asp-Controller="Department" asp-action="Edit" asp-route-id="@dept.Id"
                            class="btn btn-sm btn-warning">Edit</a>
                        <a asp-Controller="Department" asp-action="Detail" asp-route-id="@dept.Id"
                            class="btn btn-sm btn-info">Details</a>
                        <form asp-Controller="Department" asp-action="Delete" asp-route-id="@dept.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger"
                                onClick="Are you sure you want to delete this record?">Delete
                        </form>
                    </td>
                </tr>
            }
        </tbody>r
    </table> 
}
