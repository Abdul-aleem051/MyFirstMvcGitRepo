@model AdoDotNetMvc.ViewModel.UpdateEmployeeViewModel

@{
    ViewData["Title"] = "Update Employee";
}

<h2>Update Employee</h2>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />

     <div class="form-group"></div>
        <label asp-for="Id"></label>
        <input asp-for="Id" value="@Model.Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" value="@Model.FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

      <div class="form-group"></div>
        <label asp-for="LastName"></label>
        <input asp-for="LastName" value="@Model.LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" value="@Model.Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Department"></label>
        <textarea asp-for="Department" value="@Model.Department" class="form-control"></textarea>
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>

    <div class="form-group"></div>
        <label asp-for="Salary"></label>
        <textarea asp-for="Salary" value="@Model.Salary" class="form-control"></textarea>
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

     <div class="form-group"></div>
        <label asp-for="HireDate"></label>
        <textarea asp-for="HireDate" value="@Model.HireDate" class="form-control"></textarea>
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>
    
    
    <button type="submit" class="btn btn-primary">Update Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>