@using AdoDotNetMvc.ViewModel
@{
    ViewData["Title"] = "Home Page";
}
@model List<EmployeeViewModel>

<h4>@ViewData["Title"]</h4>
<a asp-action="Create" class="btn btn-primary">Create New Employee</a>
<hr>

@if (Model.Count > 0)
{
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Department</th>
                    <th>Salary</th>
                    <th>HireDate</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td style="vertical-align: middle;">@employee.FirstName</td>
                        <td style="vertical-align: middle;">@employee.LastName</td>
                        <td style="vertical-align: middle;">@employee.Email</td>
                        <td style="vertical-align: middle;">@employee.Department</td>
                        <td style="vertical-align: middle;">@employee.Salary</td>
                        <td style="vertical-align: middle;">@employee.HireDate</td>
                        <td>
                            <a asp-controller="Home" asp-action="Detail" asp-route-id="@employee.Id" class="btn btn-secondary">View</a>
                            <a asp-controller="Home" asp-action="Update" asp-route-id="@employee.Id" class="btn btn-success">Update</a>

                            <form asp-controller="Home" asp-action="Delete" asp-route-id="@employee.Id" method="post"
                                style="display:inline-block; margin:0.001;">
                                <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you sure you want to delete?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
        </table>


    }
}
